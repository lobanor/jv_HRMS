textCityOfBirth.setText("");
textCountryOfBirth.setText("");
textNationality.setText("");
textMaritalStatus.setText("");
textGender.setText("");

textPaypoint.setText(""); 
textBasic.setText("");
textGradeLevel.setText("");
textStep.setText("");
textPayroll.setText("");
textWorkLocation.setText("");


btnFirst.setEnabled( false );
btnPrevious.setEnabled( false ) ;
btnNext.setEnabled( false );
