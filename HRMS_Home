    private void btnUpdateRecordActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnUpdateRecordActionPerformed
        // TODO add your handling code here:
        // UPDATE BTN
// String variable_name (should be populated with values from) = Text fields(getText method)



String empNo = textEmployeeNo.getText( );
String last = textLastName.getText( ); 
String first = textFirstName.getText( ); 
String middle = textMiddleName.getText( );
String mda = textMda.getText( );
String title = textTitle.getText( );
String dob = textDateOfBirth.getText( );
/////////
String bank = textBankLoan.getText( );
String ctssN = textCTSS.getText( );

String StartDate = textEffectiveStartDate.getText( );
String EndDate = textEffectiveEndDate.getText( );
String pStatus = textPayrollStatus.getText();


//Date dob = (java.util.Date)textDateOfBirth.getValue();

String city = textCityOfBirth.getText( );
String country = textCountryOfBirth.getText( );
String nationality = textNationality.getText( );
String marital = textMaritalStatus.getText( );
String gender = textGender.getText( );

String paypoint = textPaypoint.getText(); 
String base = textBasic.getText();
String grade = textGradeLevel.getText();
String step = textStep.getText();
String payroll = textPayroll.getText();
String location = textWorkLocation.getText();


int newID = Integer.parseInt( empNo );
Double newbase = Double.parseDouble( base );
Double newbank = Double.parseDouble( bank );
Double newctss = Double.parseDouble( ctssN );
SimpleDateFormat formatter = new SimpleDateFormat("yyyy-mm-dd");



try {
rs.updateInt( "employee_no", newID );
rs.updateDouble( "basic2", newbase );
rs.updateDouble( "bank_loan", newbank );
rs.updateDouble( "ctss", newctss );

 rs.updateString( "First_Name", first );
 rs.updateString("last_name", last);
 rs.updateString("middle_name", middle);
 rs.updateString("mda", mda);
 rs.updateString("title", title);
 //rs.updateDate("date_of_birth", 01-Dec-2000);
 rs.updateString("city_of_birth", city);
 rs.updateString("country_of_birth", country);
 rs.updateString("nationality", nationality);
 rs.updateString("marital_status", marital);
 rs.updateString("gender", gender);
 
 rs.updateString("paypoint", paypoint);
 rs.updateString("grade_level" , grade);
 rs.updateString("step", step);
 rs.updateString("payroll", payroll);
 rs.updateString("work_location" , location);
 rs.updateString("payroll_status", pStatus);
 
 Date mydate = null;
 Date Sdate = null;
 Date Edate = null;
    try {
        mydate = formatter.parse(dob);
        Sdate = formatter.parse(StartDate);
	Edate = formatter.parse(EndDate);
        
    }
    catch (ParseException ex) {
        Logger.getLogger(hrms_hr.class.getName()).log(Level.SEVERE, null, ex);
    }
rs.updateString("date_of_birth", formatter.format(mydate));
 rs.updateString("effective_start_date", formatter.format(Sdate));
rs.updateString("effective_end_date", formatter.format(Edate));

 rs.updateRow( );
JOptionPane.showMessageDialog(hrms_hr.this, "Record Updated");
}
catch (SQLException err) {
System.out.println(err.getMessage() );
}


    }//GEN-LAST:event_btnUpdateRecordActionPerformed

    private void btnCancelNewRecordActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCancelNewRecordActionPerformed
        // TODO add your handling code here:
        //  CANCEL  BTN

try {

rs.absolute( curRow );


textEmployeeNo.setText(Integer.toString( rs.getInt("employee_no" )));
textLastName.setText( rs.getString("last_name")); 
textFirstName.setText( rs.getString("first_name")); 
textMiddleName.setText( rs.getString("middle_name"));
textMda.setText( rs.getString("mda"));
textTitle.setText( rs.getString("title"));
textDateOfBirth.setText( rs.getString("date_of_birth"));
textCityOfBirth.setText( rs.getString("city_of_birth"));
textCountryOfBirth.setText( rs.getString("country_of_birth"));
textNationality.setText( rs.getString("nationality"));
textMaritalStatus.setText( rs.getString("marital_status"));
textGender.setText( rs.getString("gender"));

textPaypoint.setText( rs.getString("paypoint")); 
textBasic.setText( rs.getString("basic2"));
textGradeLevel.setText( rs.getString("grade_level"));
textStep.setText( rs.getString("step"));
textPayroll.setText( rs.getString("payroll"));
textWorkLocation.setText( rs.getString("work_location"));

btnFirst.setEnabled( true );
btnPrevious.setEnabled( true ) ;
btnNext.setEnabled( true );
btnLast.setEnabled( true );
btnUpdateRecord.setEnabled( true );
//btnDeleteRecord.setEnabled( true );
btnNewRecord.setEnabled( true );
btnSaveRecord.setEnabled( false );
btnCancelNewRecord.setEnabled( false );
btnPayroll.setEnabled( true );
btnEmploymentHistory.setEnabled( true );

}
catch (SQLException err) {
System.out.println(err.getMessage() );
}

    }//GEN-LAST:event_btnCancelNewRecordActionPerformed

    private void btnSaveRecordActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSaveRecordActionPerformed
        // TODO add your handling code here:
         // SAVE BTN


String empNo = textEmployeeNo.getText();
String last = textLastName.getText(); 
String first = textFirstName.getText(); 
String middle = textMiddleName.getText();
String mda = textMda.getText();
String title = textTitle.getText();

String city = textCityOfBirth.getText();
String country = textCountryOfBirth.getText();
String nationality = textNationality.getText();
String marital = textMaritalStatus.getText();
String gender = textGender.getText();

String paypoint = textPaypoint.getText( );
String grade = textGradeLevel.getText( );
String step = textStep.getText( );
String payroll = textPayroll.getText( );
String location = textWorkLocation.getText( );
String basic = textBasic.getText( );

String dob = textDateOfBirth.getText();
String StartDate = "2000-02-01";
String EndDate = "2000-02-01";



int newID = Integer.parseInt(empNo);
double newbase = Double.parseDouble( basic );
SimpleDateFormat formatter = new SimpleDateFormat("yyyy-mm-dd");


try {

rs.moveToInsertRow( );

  rs.updateInt( "employee_no", newID ); 
  rs.updateDouble( "basic2", newbase );



 rs.updateString( "First_Name", first );
 rs.updateString("last_name", last);
 rs.updateString("middle_name", middle);
 rs.updateString("mda", mda);
 rs.updateString("title", title);
 
 rs.updateString("city_of_birth", city);
 rs.updateString("country_of_birth", country);
 rs.updateString("nationality", nationality);
 rs.updateString("marital_status", marital);
 rs.updateString("gender", gender);
 
 rs.updateString("paypoint", paypoint);
 rs.updateString("grade_level" , grade);
 rs.updateString("step", step);
 rs.updateString("payroll", payroll);
 rs.updateString("work_location" , location);

 
 Date mydate = null;
 Date Sdate = null;
 Date Edate = null;
    try {
        mydate = formatter.parse(dob);
        Sdate = formatter.parse(StartDate);
	Edate = formatter.parse(EndDate);
        
    }
    catch (ParseException ex) {
        Logger.getLogger(hrms_hr.class.getName()).log(Level.SEVERE, null, ex);
    }
rs.updateString("date_of_birth", formatter.format(mydate));
 rs.updateString("effective_start_date", formatter.format(Sdate));
rs.updateString("effective_end_date", formatter.format(Edate));





rs.insertRow( );

stmt.close( );
rs.close( );


stmt = con.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);
String sql = "SELECT * FROM e_hrms_hr";
rs = stmt.executeQuery(sql);

rs.next( );

// Gets data from database columns and stores it under variable_name2 in the result set
int id_col = rs.getInt("employee_no");
double base2 = rs.getDouble("basic2");

String base3 = Double.toString(base2);
String empNo2 = Integer.toString(id_col);
String first2 = rs.getString("first_name");
String last2 = rs.getString("last_name");
String middle2 = rs.getString("middle_name");
String mda2 = rs.getString("mda");
String title2 = rs.getString("title");
//String dob2 = rs.getString("date_of_birth");
String city2 = rs.getString("city_of_birth");
String country2 = rs.getString("country_of_birth");
String nationality2 = rs.getString("nationality");
String marital2 = rs.getString("marital_status");
String gender2 = rs.getString("gender");

String paypoint2 = rs.getString("paypoint");
String grade2 = rs.getString("grade_level");
String step2 = rs.getString("step");
String payroll2 = rs.getString("payroll");
String location2 = rs.getString("work_location");

// POPULATES Text Fields with new variable_name2

textEmployeeNo.setText(empNo2);
textLastName.setText(last2); 
textFirstName.setText(first2); 
textMiddleName.setText(middle2);
textMda.setText(mda2);
textTitle.setText(title2);
//textDateOfBirth.setText(dob2);
textCityOfBirth.setText(city2);
textCountryOfBirth.setText(country2);
textNationality.setText(nationality2);
textMaritalStatus.setText(marital2);
textGender.setText(gender2);

textPaypoint.setText(paypoint2); 
textBasic.setText(base3);
textGradeLevel.setText(grade2);
textStep.setText(step2);
textPayroll.setText(payroll2);
textWorkLocation.setText(location2);





// Re-activates buttons

btnFirst.setEnabled( true );
btnPrevious.setEnabled( true ) ;
btnNext.setEnabled( true );
btnLast.setEnabled( true );
btnUpdateRecord.setEnabled( true );
//btnDeleteRecord.setEnabled( true );
btnNewRecord.setEnabled( true );
btnEmploymentHistory.setEnabled(true);
btnPayroll.setEnabled(true);
btnSaveRecord.setEnabled( false );
btnCancelNewRecord.setEnabled( false );

JOptionPane.showMessageDialog(hrms_hr.this, "New Record Saved By User");

}
catch (SQLException err) {
System.out.println(err.getMessage() );
}

    }//GEN-LAST:event_btnSaveRecordActionPerformed

