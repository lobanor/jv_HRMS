    private void btnNextActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnNextActionPerformed
        // TODO add your handling code here:
               // NEXT BTN

try {
if ( rs.next( ) ) {

	// string (variableName) = rs[resultSet].getString[from] ("table_column")

int id_col = rs.getInt("employee_no");

double base2 = rs.getDouble("basic2");
double bk = rs.getDouble("bank_loan");
double cts = rs.getDouble("ctss");

String base = Double.toString(base2);
String empNo = Integer.toString(id_col);
String bank = Double.toString(bk);
String ctss = Double.toString(cts);

String first = rs.getString("first_name");
String last = rs.getString("last_name");

String middle = rs.getString("middle_name");
String mda = rs.getString("mda");
String title = rs.getString("title");
String dob = rs.getString("date_of_birth");
String city = rs.getString("city_of_birth");
String country = rs.getString("country_of_birth");
String nationality = rs.getString("nationality");
String marital = rs.getString("marital_status");
String gender = rs.getString("gender");

String paypoint = rs.getString("paypoint");
String grade = rs.getString("grade_level");
String step = rs.getString("step");
String payroll = rs.getString("payroll");
String location = rs.getString("work_location");
String StartDate = rs.getString("effective_start_date");
String EndDate = rs.getString("effective_end_date");
String pStatus = rs.getString("payroll_status");



// DISPLAY THE FIRST RECORD IN THE TEXT FIELDS
//fieldName.setText(variableName)

textBanner.setText(title +"  " + first +"  " + last +" is from " + mda );
textEmployeeNo.setText(empNo);
textLastName.setText(last); 
textFirstName.setText(first); 
textMiddleName.setText(middle);
textMda.setText(mda);
textTitle.setText(title);
textDateOfBirth.setText(dob);
textCityOfBirth.setText(city);
textCountryOfBirth.setText(country);
textNationality.setText(nationality);
textMaritalStatus.setText(marital);
textGender.setText(gender);
textBankLoan.setText(bank);
textCTSS.setText(ctss);

textEffectiveStartDate.setText(StartDate);
textEffectiveEndDate.setText(EndDate);
textPayrollStatus.setText(pStatus);

textPaypoint.setText(paypoint); 
textBasic.setText(base);
textGradeLevel.setText(grade);
textStep.setText(step);
textPayroll.setText(payroll);
textWorkLocation.setText(location);


}
else {
rs.previous( );
JOptionPane.showMessageDialog(hrms_hr.this, "End of Database File");
}
}
catch (SQLException err) {
JOptionPane.showMessageDialog(hrms_hr.this, err.getMessage());
}

    }//GEN-LAST:event_btnNextActionPerformed

    private void btnPreviousActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnPreviousActionPerformed
