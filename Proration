    private void ProrateBtnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ProrateBtnActionPerformed
        // TODO add your handling code here:
        //ComboBoxModel<String> pMonth = MonthCombo.getModel();
       //MonthTxt.setText(MonthCombo.getModel());
       DecimalFormat df1 = new DecimalFormat("##.00");
       
       String pd = prorationDateTxt.getText();
       //Double pdConv = Double.parseDouble( pd );
       
        String pMonth = MonthTxt.getText();
       // String pDate = prorationDateTxt.getText();
        Double pDate = Double.parseDouble( prorationDateTxt.getText ( ) );
        Double NetPay = Double.parseDouble( textNetPay.getText ( ) );

if (pMonth.equals("JAN") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}

else if (pMonth.equals("FEB") )  { 
    double np = Double.parseDouble(df1.format((NetPay /28 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("MAR") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("APR") )  { 
    double np = Double.parseDouble(df1.format((NetPay /30 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("MAY") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("JUN") )  { 
    double np = Double.parseDouble(df1.format((NetPay /30 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("JUL") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("AUG") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("SEP") )  { 
    double np = Double.parseDouble(df1.format((NetPay /30 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("OCT") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("NOV") )  { 
    double np = Double.parseDouble(df1.format((NetPay /30 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else if (pMonth.equals("DEC") )  { 
    double np = Double.parseDouble(df1.format((NetPay /31 )* pDate));
    ProratedAmount.setText( Double.toString(np)  );
}


else {
JOptionPane.showMessageDialog(null,"Invalid entries");
MonthTxt.setText("JAN");
prorationDateTxt.setText("1");
Month_Label.setText("JANUARY");
prorationDateTxt.requestFocus();
    }//GEN-LAST:event_ProrateBtnActionPerformed

//  ---------------------  MULTIPLE IF CONDITIONS  ----------------------//  
// 'if and' statement as used in oracle Fast Formula is coded as "if (Stmt) &&(Stmt) " in java

if ((pMonth.equals("JAN") ) && (pd .equals("15")))
 { 
    test_Lbl.setText("This is the Middle of January");	}
     
 else
 {test_Lbl.setText("This ");}

    }
