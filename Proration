    private void MonthTxtFocusLost(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_MonthTxtFocusLost
        // TODO add your handling code here:
        
        String pMonth = MonthTxt.getText();
      
         
if (pMonth.equals("JAN") )  { 
    Month_Label.setText("JANUARY");
}

else if (pMonth.equals("FEB") )  { 
    Month_Label.setText("FEBRUARY");	
	
}


else if (pMonth.equals("MAR") )  { 
    Month_Label.setText("MARCH");	
	
}


else if (pMonth.equals("APR") )  { 
    Month_Label.setText("APRIL");	
	
}


else if (pMonth.equals("MAY") )  { 
    Month_Label.setText("MAY");	
	
}


else if (pMonth.equals("JUN") )  { 
    Month_Label.setText("JUNE");	
	
}


else if (pMonth.equals("JUL") )  { 
    Month_Label.setText("JULY");	
	
}


else if (pMonth.equals("AUG") )  { 
    Month_Label.setText("AUGUST");	
	
}


else if (pMonth.equals("SEP") )  { 
    Month_Label.setText("SEPTEMBER");	
	
}


else if (pMonth.equals("OCT") )  { 
    Month_Label.setText("OCTOBER");	
	
}


else if (pMonth.equals("NOV") )  { 
    Month_Label.setText("NOVEMBER");	
	
}


else if (pMonth.equals("DEC") )  { 
    Month_Label.setText("DECEMBER");	
	
}
else 
{
Month_Label.setText("..........");
}
        
        {
    }//GEN-LAST:event_MonthTxtFocusLost
    }
