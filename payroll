        double base2 = Double.parseDouble( PayrollBasic );
        double Bank = Double.parseDouble( SBank );
        double CTSS = Double.parseDouble( StringCTSS );
       

      
        
double dm = Double.parseDouble(df1.format(base2 * 0.30));
       textDomestic.setText( Double.toString(dm) );
     
     
double rt = Double.parseDouble(df1.format(base2 * 0.35));
       textRent.setText( Double.toString(rt) );
       
double tp = Double.parseDouble(df1.format(base2 * 0.23));
       textTransport.setText( Double.toString(tp) );
        
double ut = Double.parseDouble(df1.format(base2 * 0.20));
       textUtility.setText( Double.toString(ut) );
        
double ml = Double.parseDouble(df1.format(base2 * 0.15));
       textMeal.setText( Double.toString(ml) );

 double tx = Double.parseDouble(df1.format(base2 * 0.3345));
       textTax.setText( Double.toString(tx) );       
       
double gp = Double.parseDouble(df1.format(base2 * 2.23));
       textGrossPay.setText( Double.toString(gp) );  
       
 // position of variable matters
 String StringTax = textTax.getText();       
double Tax = Double.parseDouble( StringTax );

///////
      double td = Double.parseDouble(df1.format(Bank + CTSS + Tax  ));
       textTotalDeduction.setText( Double.toString(td) );
       
       String StringTD = textTotalDeduction.getText();
       String StringGross = textGrossPay.getText();
       double TD = Double.parseDouble( StringTD );
       double Gross = Double.parseDouble( StringGross );

    double Net = Double.parseDouble(df1.format(Gross - TD));
       textNetPay.setText( Double.toString(Net) );

       

       
       System.out.println(df1.format(base2 * 0.23));
       
       
       
